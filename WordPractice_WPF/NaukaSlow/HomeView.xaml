<UserControl x:Class="NaukaSlow.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaukaSlow"
             xmlns:viewModels="clr-namespace:ViewModels;assembly=ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="200">
        <TextBlock Text="Nauka Słów" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <TextBlock Text="{Binding TableFlipText}"/>
        <TextBlock Text="Maciej Olszowy 117256" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
    </StackPanel>
</UserControl>
